[user]
	name = Ellis Tarn
	email = ellistarn@gmail.com
	signingkey = /Users/etarn/.ssh/id_ed25519.pub

[core]
	pager = less -FMRiX
	editor = vim
	excludesfile = /Users/etarn/.gitignore.global

[push]
	default = simple
	autoSetupRemote = true

[alias]
	graph = log --graph --all --pretty=format:\"%C(yellow)%h%Creset%C(cyan)%C(bold)%d%Creset %C(cyan)(%cr)%Creset %C(green)%<(12)%cn%Creset %s\"

[color]
	ui = auto

[credential]
	helper = osxkeychain
	UseHttpPath = true

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[gpg]
	format = ssh
